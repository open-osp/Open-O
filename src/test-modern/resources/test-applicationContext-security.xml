<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Security configuration for tests -->
    <!-- Most of these will be mocked but we define them for compatibility -->

    <!-- Security managers can be mocked or use test implementations -->
    <bean id="securityTokenManager" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="ca.openosp.openo.managers.SecurityTokenManager"/>
    </bean>

    <bean id="privacyManager" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="ca.openosp.openo.managers.PrivacyManager"/>
    </bean>

    <!-- LoggedInInfo factory for tests -->
    <bean id="loggedInInfoFactory" class="ca.openosp.openo.test.fixtures.LoggedInInfoTestFactory"/>

</beans>